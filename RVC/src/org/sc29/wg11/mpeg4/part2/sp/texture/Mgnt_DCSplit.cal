package org.sc29.wg11.mpeg4.part2.sp.texture;

import org.sc29.wg11.mpeg4.part2.Constants.*;

actor Mgnt_DCSplit () 
	int(size=SAMPLE_SZ) IN 
		==> 
		int(size=SAMPLE_SZ) DC,
		int(size=SAMPLE_SZ) AC :

	action IN:[ x ] repeat 64 ==> DC:[ x[0] ], AC:[ [ x[i] : for int i in 1 .. 63 ] ] repeat 63
	end

end
